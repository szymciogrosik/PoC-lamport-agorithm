<?xml version="1.0" encoding="UTF-8"?>
<project name="module_wat.lab" default="compile.module.wat.lab">
  <dirname property="module.wat.lab.basedir" file="${ant.file.module_wat.lab}"/>
  
  <property name="module.jdk.home.wat.lab" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.wat.lab" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.wat.lab" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.wat.lab" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="wat.lab.output.dir" value="${module.wat.lab.basedir}/../../out/production/wat.lab"/>
  <property name="wat.lab.testoutput.dir" value="${module.wat.lab.basedir}/../../out/test/wat.lab"/>
  
  <path id="wat.lab.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="wat.lab.module.production.classpath">
    <path refid="${module.jdk.classpath.wat.lab}"/>
  </path>
  
  <path id="wat.lab.runtime.production.module.classpath">
    <pathelement location="${wat.lab.output.dir}"/>
  </path>
  
  <path id="wat.lab.module.classpath">
    <path refid="${module.jdk.classpath.wat.lab}"/>
    <pathelement location="${wat.lab.output.dir}"/>
  </path>
  
  <path id="wat.lab.runtime.module.classpath">
    <pathelement location="${wat.lab.testoutput.dir}"/>
    <pathelement location="${wat.lab.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.wat.lab">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.wat.lab">
    <patternset refid="excluded.from.module.wat.lab"/>
  </patternset>
  
  
  <target name="compile.module.wat.lab" depends="compile.module.wat.lab.production,compile.module.wat.lab.tests" description="Compile module wat.lab"/>
  
  <target name="compile.module.wat.lab.production" depends="register.custom.compilers" description="Compile module wat.lab; production classes"/>
  
  <target name="compile.module.wat.lab.tests" depends="register.custom.compilers,compile.module.wat.lab.production" description="compile module wat.lab; test classes" unless="skip.tests"/>
  
  <target name="clean.module.wat.lab" description="cleanup module">
    <delete dir="${wat.lab.output.dir}"/>
    <delete dir="${wat.lab.testoutput.dir}"/>
  </target>
</project>